<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">

<Page.actionBar>
    <ActionBar title="Wybierz swoje centrum" icon="" class="action-bar">
    </ActionBar>
</Page.actionBar>

<StackLayout class="p-20">
    <ListView items="{{ appModel.stations }}" itemTap="onItemTap">
        <ListView.itemTemplate>
            <Label text="{{ name }}" textWrap="true"/>
        </ListView.itemTemplate>
    </ListView>

    <Button text="Ustaw" tap="apply" class="btn btn-primary btn-active" visibility="{{wizard?'visible':'collapse'}}"/>
    <Button text="PomiÅ„" tap="next" class="btn" visibility="{{wizard?'visible':'collapse'}}"/>
</StackLayout>

</Page>